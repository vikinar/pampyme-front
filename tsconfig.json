{
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "app/*": [
        "./packages/app/*",
        "./packages/app/*.native",
        "./packages/app/*.web"
      ],
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "types": ["react", "react-native", "dripsy"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "extends": "expo/tsconfig.base"
}
